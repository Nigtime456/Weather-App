<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gmail.nigtime456.weatherapplication">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/BaseTheme">

        <activity
            android:name=".ui.screen.splash.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.screen.current.pager.CurrentForecastActivity"
            android:theme="@style/BaseTheme.Dark" />

        <activity
            android:name=".ui.screen.search.SearchActivity"
            android:theme="@style/BaseTheme.Dark"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".ui.screen.locations.LocationsActivity"
            android:parentActivityName=".ui.screen.current.pager.CurrentForecastActivity"
            android:theme="@style/BaseTheme.Dark" />

        <activity
            android:name=".ui.screen.settings.SettingsActivity"
            android:theme="@style/BaseTheme.Dark" />
    </application>

</manifest>