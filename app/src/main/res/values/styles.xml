<resources>

    <!--  TabLayout  -->
    <style name="TabLayoutDefault">
        <item name="android:background">@null</item>
        <item name="android:overScrollMode">never</item>
        <item name="tabBackground">@drawable/view_tab_filled_circle</item>
        <item name="tabGravity">center</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabTextColor">@color/white</item>
        <item name="tabTextAppearance">@style/PrimaryText.Lowest</item>
        <item name="tabMode">fixed</item>
        <item name="tabMinWidth">@dimen/tab_size</item>
        <item name="tabMaxWidth">@dimen/tab_size</item>
    </style>

    <!--  Refresh header  -->
    <style name="ClassicHeaderDefault">
        <item name="srlAccentColor">@color/white</item>
        <item name="srlDrawableArrow">@drawable/ic_arrow_down</item>
        <item name="srlDrawableProgress">@drawable/ic_sun</item>
        <item name="srlDrawableSize">@dimen/icon_small</item>
        <item name="srlTextFinish">@string/classic_header_finish</item>
        <item name="srlTextPulling">@string/classic_header_pulling</item>
        <item name="srlTextRefreshing">@string/classic_header_refreshing</item>
        <item name="srlTextRelease">@string/classic_header_release</item>
        <item name="srlTextSizeTime">@dimen/text_primary_tiny</item>
        <item name="srlTextSizeTitle">@dimen/text_secondary_lowest</item>
        <item name="srlTextFailed">@string/classic_header_failed</item>
        <item name="srlFinishDuration">@integer/long_anim</item>
    </style>

    <!--  NavigationViews  -->
    <style name="NavigationView" parent="Widget.Design.NavigationView">
        <item name="android:theme">@style/NavigationViewOverlay</item>
        <item name="itemIconPadding">@dimen/spacing_medium</item>
        <item name="itemIconSize">@dimen/icon_small</item>
        <item name="itemMaxLines">1</item>
        <item name="itemIconTint">@color/icon_checkable</item>
        <item name="itemTextColor">@color/text_primary</item>
        <item name="itemTextAppearance">@style/PrimaryText.Lowest</item>
        <item name="android:background">@color/black</item>
        <item name="itemShapeFillColor">@android:color/transparent</item>
    </style>

    <style name="NavigationViewOverlay">
        <!--   hide scrollbar     -->
        <item name="android:scrollbars">none</item>
        <item name="android:scrollbarTrackVertical">@null</item>
        <item name="android:scrollbarThumbVertical">@null</item>

        <!--     divider   -->
        <item name="android:listDivider">@color/dark_black</item>

        <!--   title attributes     -->
        <item name="android:textSize">@dimen/text_secondary_lowest</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>

    <!--    Snackbar  styles  -->
    <style name="SnackDefault" parent="Widget.MaterialComponents.Snackbar">
        <item name="animationMode">slide</item>
        <item name="backgroundTint">@color/dark_black</item>
        <item name="backgroundOverlayColorAlpha">0</item>
        <item name="actionTextColorAlpha">1</item>
    </style>

    <style name="SnackButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/orange</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">?attr/colorControlHighlight</item>
        <item name="android:textSize">@dimen/text_primary_lowest</item>
    </style>

    <!--  CrossFadeAnimator styles  -->
    <style name="CrossFadeAnimatorLayoutDefault">
        <item name="cfalAnimationDuration">@integer/medium_anim</item>
        <item name="cfalStartDelay">@integer/medium_anim</item>
    </style>

    <!--   Toolbar style  -->
    <style name="ToolbarDefault">
        <item name="titleTextColor">@color/text_primary</item>
        <item name="subtitleTextAppearance">@style/PrimaryText.Lowest</item>
        <item name="subtitleTextColor">@color/text_primary</item>
        <item name="titleTextAppearance">@style/PrimaryText.Medium</item>
    </style>

    <!--  Search view  -->
    <style name="SearchViewDefault">
        <item name="closeIcon">@drawable/ic_clear</item>
        <item name="iconifiedByDefault">false</item>
        <item name="queryBackground">@null</item>
        <item name="searchIcon">@drawable/ic_search</item>
        <item name="android:theme">@style/SearchViewOverlay</item>
    </style>

    <style name="SearchViewOverlay">
        <item name="android:textSize">@dimen/text_primary_lowest</item>
    </style>

    <!--  Divider  -->
    <style name="DividerDefault">
        <item name="android:background">?attr/dividerColor</item>
    </style>

    <!--Text styles-->
    <style name="PrimaryText">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="SecondaryText">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="PrimaryText.Large">
        <item name="android:textSize">@dimen/text_primary_large</item>
    </style>

    <style name="PrimaryText.Medium">
        <item name="android:textSize">@dimen/text_primary_medium</item>
    </style>

    <style name="SecondaryText.Medium">
        <item name="android:textSize">@dimen/text_secondary_medium</item>
    </style>

    <style name="PrimaryText.Lowest">
        <item name="android:textSize">@dimen/text_primary_lowest</item>
    </style>

    <style name="PrimaryText.Tiny">
        <item name="android:textSize">@dimen/text_primary_tiny</item>
    </style>

    <style name="SecondaryText.Lowest">
        <item name="android:textSize">@dimen/text_secondary_lowest</item>
    </style>

</resources>