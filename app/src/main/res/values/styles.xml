<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/orange</item>

        <item name="android:colorEdgeEffect">?attr/colorAccent</item>

        <!--    Custom color attributes     -->
        <item name="themePrimaryTextColor">@color/white</item>

        <item name="themeSecondaryTextColor">@color/light_gray</item>

        <item name="themePrimaryTextColorSelector">@color/selector_text_primary</item>
        <item name="themeSecondaryTextColorSelector">@color/selector_text_secondary</item>

        <item name="themeScreenBackground">@color/black</item>

        <item name="themeSecondaryTempColor">#3F51B5</item>

        <item name="themeDividerColor">@color/light_black</item>

        <item name="themeHighlightColor">@color/light_black</item>

        <item name="themeIconTintColor">?attr/colorAccent</item>

        <item name="themeDayColor">#2477bb</item>
        <item name="themeNightColor">#202745</item>


        <!--   Action Mode     -->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">?themeScreenBackground</item>
        <item name="android:actionModeCloseDrawable">@drawable/ic_arrow_back</item>
        <item name="android:actionModeCopyDrawable">@drawable/ic_content_copy</item>
        <item name="android:actionModeCutDrawable">@drawable/ic_content_cut</item>
        <item name="android:actionModePasteDrawable">@drawable/ic_content_paste</item>
        <item name="android:actionModeSelectAllDrawable">@drawable/ic_select_all</item>

        <!--    Snackbar    -->
        <item name="snackbarStyle">@style/SnackMain</item>
        <item name="snackbarTextViewStyle">@style/SnackTextStyle</item>
        <item name="snackbarButtonStyle">@style/SnackButton</item>
    </style>

    <!--  CrossFadeAnimator styles  -->
    <style name="CrossFadeDefaultStyle">
        <item name="crossAnimationDuration">@integer/cross_anim_duration</item>
        <item name="crossStartDelay">@integer/cross_start_delay</item>
    </style>

    <!--  NavigationViews  -->
    <style name="NavigationView" parent="Widget.Design.NavigationView">
        <item name="android:theme">@style/NavigationThemeOverlay</item>
        <item name="itemBackground">@drawable/selector_ripple_without_background</item>
        <item name="itemIconPadding">@dimen/small_padding</item>
        <item name="itemIconSize">@dimen/icon_small</item>
        <item name="itemIconTint">@color/selector_highlight_icon</item>
        <item name="itemTextColor">@color/selector_text_primary</item>
        <item name="android:background">?attr/themeScreenBackground</item>
    </style>

    <style name="NavigationThemeOverlay">
        <item name="android:scrollbarThumbVertical">?attr/colorAccent</item>
        <item name="android:scrollbarStyle">insideInset</item>
        <item name="android:scrollbarSize">3dp</item>
        <item name="android:listDivider">?attr/themeDividerColor</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColorSecondary">?attr/themeSecondaryTextColorSelector</item>
    </style>

    <!--    Snackbar  styles  -->
    <style name="SnackMain" parent="Widget.MaterialComponents.Snackbar">
        <item name="animationMode">slide</item>
        <item name="backgroundTint">?attr/themeScreenBackground</item>
    </style>

    <style name="SnackTextStyle" parent="PrimaryText.Lowest">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="SnackButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textSize">14sp</item>
        <item name="rippleColor">?attr/colorAccent</item>
    </style>

    <!-- Card styles -->
    <style name="LiftingToolbarCardStyle">
        <item name="cardBackgroundColor">?attr/themeScreenBackground</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">0dp</item>
        <item name="android:stateListAnimator">@animator/selector_lift_app_bar</item>
    </style>


    <!--   Toolbar style  -->
    <style name="ToolbarMainStyle">
        <item name="titleTextColor">?attr/themePrimaryTextColorSelector</item>
        <item name="subtitleTextColor">?attr/themePrimaryTextColorSelector</item>
    </style>

    <!--  Button's style   -->
    <style name="TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconPadding">@dimen/small_padding</item>
        <item name="iconSize">@dimen/icon_small</item>
        <item name="iconTint">?attr/themeIconTintColor</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="rippleColor">?attr/themeHighlightColor</item>
    </style>

    <style name="TextButton.PrimaryLowest">
        <item name="android:textAppearance">@style/PrimaryText.Lowest</item>
        <item name="android:textColor">?attr/themePrimaryTextColorSelector</item>
    </style>

    <style name="TextButton.SecondaryLowest">
        <item name="android:textAppearance">@style/SecondaryText.Lowest</item>
        <item name="android:textColor">?attr/themeSecondaryTextColorSelector</item>
    </style>

    <!--  TextInputLayout style  -->
    <style name="TextInputLayoutMainStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxCollapsedPaddingTop">0dp</item>
        <item name="textInputLayoutFocusedRectEnabled">false</item>
        <item name="boxStrokeColor">?attr/colorAccent</item>
        <item name="boxBackgroundColor">?attr/themeScreenBackground</item>
        <item name="endIconMode">clear_text</item>
        <item name="boxStrokeWidth">@dimen/divider_size</item>
        <item name="boxStrokeWidthFocused">@dimen/divider_size</item>
        <item name="endIconTint">?attr/themeIconTintColor</item>
        <item name="hintEnabled">false</item>
    </style>


    <style name="TextInputEditMainStyle" parent="PrimaryText.Lowest">
        <item name="android:textColor">?attr/themePrimaryTextColorSelector</item>
        <item name="android:textColorHint">?attr/themeSecondaryTextColorSelector</item>
    </style>


    <!--Text styles-->
    <style name="PrimaryText">
        <item name="android:textColor">?attr/themePrimaryTextColorSelector</item>
    </style>

    <style name="SecondaryText">
        <item name="android:textColor">?attr/themeSecondaryTextColorSelector</item>
    </style>


    <style name="PrimaryText.Large">
        <item name="android:textSize">@dimen/text_size_primary_large</item>
    </style>

    <style name="PrimaryText.Medium">
        <item name="android:textSize">@dimen/text_size_primary_medium</item>
    </style>

    <style name="SecondaryText.Medium">
        <item name="android:textSize">@dimen/text_size_secondary_medium</item>
    </style>

    <style name="PrimaryText.Lowest">
        <item name="android:textSize">@dimen/text_size_primary_lowest</item>
    </style>

    <style name="SecondaryText.Lowest">
        <item name="android:textSize">@dimen/text_size_secondary_lowest</item>
    </style>

    <style name="DividerDefaultStyle">
        <item name="android:background">?attr/themeDividerColor</item>
    </style>


</resources>
