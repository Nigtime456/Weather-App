<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorAccent">@color/orange</item>

        <!--    img    -->
        <item name="iconTint">@color/white</item>

        <!--     edge effect   -->
        <item name="android:colorEdgeEffect">?attr/colorControlHighlight</item>

        <!--    Snackbar    -->
        <item name="snackbarStyle">@style/SnackDefault</item>
        <item name="snackbarTextViewStyle">@style/PrimaryText.Lowest</item>
        <item name="snackbarButtonStyle">@style/SnackButton</item>

        <!--   dialog   -->
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
    </style>

    <!--      Secondary Theme  -->
    <style name="AppTheme.Secondary">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/dark_black</item>

        <!--   divider     -->
        <item name="dividerColor">@color/dark_black</item>

        <!--     ripple   -->
        <item name="colorControlHighlight">@color/dark_gray</item>
    </style>

    <style name="AppTheme.Secondary.Search">
        <item name="android:windowEnterTransition">@transition/slide_right</item>
    </style>

    <style name="AppTheme.Secondary.Locations">
        <item name="android:windowEnterTransition">@transition/slide_bottom</item>
    </style>

    <style name="AppTheme.Secondary.Settings">
        <item name="android:windowEnterTransition">@transition/slide_bottom</item>
    </style>

    <style name="AppTheme.Secondary.About">
        <item name="android:windowEnterTransition">@transition/slide_bottom</item>
    </style>

    <!--  Current forecast theme  #298cca-->
    <style name="AppTheme.Forecast">
        <item name="android:windowTranslucentStatus">true</item>
        <!--     divider   -->
        <item name="dividerColor">#1FFFFFFF</item>
        <!--    ripple    -->
        <item name="colorControlHighlight">@color/dark_white</item>
        <!--     animation  -->
        <item name="android:windowEnterTransition">@transition/fade</item>
    </style>

    <!--  Splash theme  -->
    <style name="SplashTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/view_background_splash</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.Settings">
        <item name="colorPrimaryDark">@color/dark_black</item>
        <item name="colorPrimary">@color/black</item>
        <item name="android:windowEnterTransition">@transition/slide_bottom</item>
    </style>

    <!--  Dialog  -->
    <style name="AlertDialogTheme" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@drawable/view_dialog_background_rounded</item>
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/dark_black</item>
        <item name="colorControlActivated">@color/orange</item>
    </style>

</resources>