<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/spacing_medium"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_hourly_forecast_time"
        style="@style/PrimaryText.Tiny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        tools:text="21:00" />

    <ImageView
        android:id="@+id/item_hourly_forecast_ico"
        android:layout_width="@dimen/icon_small"
        android:layout_height="@dimen/icon_small"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/spacing_small"
        android:contentDescription="@string/content_description_weather"
        tools:src="@drawable/ic_weather_cloudy" />

    <TextView
        android:id="@+id/item_hourly_forecast_temp"
        style="@style/PrimaryText.Tiny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/spacing_small"
        tools:text="10°" />

</LinearLayout>