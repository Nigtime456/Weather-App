<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/small_margin">

    <TextView
        android:id="@+id/currentForecastCurrentTemp"
        style="@style/PrimaryText.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/current_forecast_offsets"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_marginTop="0dp"
        tools:text="4°" />

    <TextView
        android:id="@+id/currentForecastCurrentDescription"
        style="@style/PrimaryText.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/currentForecastCurrentTemp"
        app:layout_constraintStart_toStartOf="@id/currentForecastCurrentTemp"
        app:layout_constraintTop_toBottomOf="@id/currentForecastCurrentTemp"
        tools:text="Overcast clouds" />

    <ImageView
        android:id="@+id/currentForecastCurrentIco"
        android:layout_width="@dimen/icon_small"
        android:layout_height="@dimen/icon_small"
        android:layout_marginEnd="@dimen/small_margin"
        android:contentDescription="@string/content_description_weather_ico"
        app:layout_constraintBottom_toBottomOf="@id/currentForecastCurrentDescription"
        app:layout_constraintEnd_toStartOf="@id/currentForecastCurrentDescription"
        app:layout_constraintTop_toTopOf="@id/currentForecastCurrentDescription"
        tools:src="@drawable/_weather_stub" />

    <TextView
        android:id="@+id/currentForecastCurrentFeelsLikeTemp"
        style="@style/PrimaryText.Lowest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/currentForecastCurrentDescription"
        app:layout_constraintStart_toStartOf="@id/currentForecastCurrentDescription"
        app:layout_constraintTop_toBottomOf="@id/currentForecastCurrentDescription"
        tools:text="Feels like 35°" />

    <View
        android:id="@+id/divider1"
        style="@style/DividerDefaultStyle"
        android:layout_width="0dp"
        android:layout_height="@dimen/divider_size"
        android:layout_marginHorizontal="@dimen/medium_margin"
        android:layout_marginTop="@dimen/current_forecast_offsets"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/currentForecastCurrentFeelsLikeTemp"
        tools:layout_marginTop="0dp" />

    <TextView
        android:id="@+id/title_hourly_forecast"
        style="@style/SecondaryText.Lowest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/medium_margin"
        android:layout_marginTop="@dimen/small_margin"
        android:text="@string/current_forecast_hourly_forecast"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider1" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/currentForecastHourlyList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_hourly_forecast"
        tools:listitem="@layout/item_hourly_forecast" />

    <View
        android:id="@+id/divider2"
        style="@style/DividerDefaultStyle"
        android:layout_width="0dp"
        android:layout_height="@dimen/divider_size"
        android:layout_marginHorizontal="@dimen/medium_margin"
        android:layout_marginTop="@dimen/small_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/currentForecastHourlyList" />


    <TextView
        android:id="@+id/title_daily_forecast"
        style="@style/SecondaryText.Lowest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/small_margin"
        android:layout_marginStart="@dimen/medium_margin"
        android:text="@string/current_forecast_daily_forecast"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider2" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/currentForecastDailyList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/small_margin"
        android:overScrollMode="never"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_daily_forecast"
        tools:itemCount="1"
        tools:listitem="@layout/item_daily_forecast" />

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/currentForecastDaysSwitcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/medium_margin"
        app:checkedButton="@id/currentForecastDisplay5days"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/currentForecastDailyList"
        app:selectionRequired="true"
        app:singleSelection="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/currentForecastDisplay5days"
            style="@style/TextButton.SecondaryLowest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/small_padding"
            android:text="@string/current_forecast_5_days" />

        <com.google.android.material.button.MaterialButton
            style="@style/TextButton.SecondaryLowest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checkable="false"
            android:clickable="false"
            android:text="@string/current_forecast_char_separator" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/currentForecastDisplay10days"
            style="@style/TextButton.SecondaryLowest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/small_padding"
            android:text="@string/current_forecast_10_days" />

        <com.google.android.material.button.MaterialButton
            style="@style/TextButton.SecondaryLowest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checkable="false"
            android:clickable="false"
            android:text="@string/current_forecast_char_separator" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/currentForecastDisplay16days"
            style="@style/TextButton.SecondaryLowest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/small_padding"
            android:text="@string/current_forecast_16_days" />
    </com.google.android.material.button.MaterialButtonToggleGroup>

    <View
        android:id="@+id/divider3"
        style="@style/DividerDefaultStyle"
        android:layout_width="0dp"
        android:layout_height="@dimen/divider_size"
        android:layout_marginHorizontal="@dimen/medium_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/currentForecastDaysSwitcher" />

    <TextView
        android:id="@+id/title_more"
        style="@style/SecondaryText.Lowest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/medium_margin"
        android:layout_marginTop="@dimen/small_margin"
        android:text="@string/current_forecast_more"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider3" />

    <TextView
        android:id="@+id/currentForecastWindDirChars"
        style="@style/PrimaryText.Lowest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/wind_ico"
        app:layout_constraintEnd_toEndOf="@id/ic_location"
        app:layout_constraintStart_toStartOf="@id/ic_location"
        app:layout_constraintTop_toTopOf="@+id/wind_ico"
        tools:text="AB" />

    <FrameLayout
        android:id="@+id/ic_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_circle_outline"
        app:layout_constraintBottom_toTopOf="@id/divider6"
        app:layout_constraintEnd_toStartOf="@+id/divider5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/currentForecastWindDirChars">

        <ImageView
            android:id="@+id/currentForecastWindIndicator"
            android:layout_width="@dimen/icon_small"
            android:layout_height="@dimen/icon_small"
            android:layout_margin="8dp"
            android:contentDescription="@string/current_forecast_wind"
            android:src="@drawable/ic_navigation" />
    </FrameLayout>


    <ImageView
        android:id="@+id/wind_ico"
        android:layout_width="@dimen/icon_small"
        android:layout_height="@dimen/icon_small"
        android:layout_marginTop="@dimen/small_margin"
        android:contentDescription="@string/current_forecast_wind"
        android:src="@drawable/ic_wind"

        app:layout_constraintStart_toStartOf="@+id/divider4"
        app:layout_constraintTop_toBottomOf="@id/title_more" />

    <TextView
        android:id="@+id/title_wind"
        style="@style/SecondaryText.Lowest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_margin"
        android:text="@string/current_forecast_wind"
        app:layout_constraintBottom_toBottomOf="@id/wind_ico"
        app:layout_constraintStart_toEndOf="@id/wind_ico"
        app:layout_constraintTop_toTopOf="@id/wind_ico" />

    <TextView
        android:id="@+id/currentForecastWindSpeed"
        style="@style/PrimaryText.Lowest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/title_wind"
        app:layout_constraintEnd_toEndOf="@+id/divider4"
        app:layout_constraintTop_toTopOf="@id/title_wind"
        tools:text="14 m/s" />


    <View
        android:id="@+id/divider4"
        style="@style/DividerDefaultStyle"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_marginEnd="@dimen/medium_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/title_more"
        app:layout_constraintTop_toBottomOf="@id/wind_ico" />

    <ImageView
        android:id="@+id/pressure_ico"
        android:layout_width="@dimen/icon_small"
        android:layout_height="@dimen/icon_small"
        android:layout_marginTop="@dimen/small_margin"
        android:contentDescription="@string/current_forecast_pressure"
        android:src="@drawable/ic_pressure"
        app:layout_constraintStart_toStartOf="@+id/divider4"
        app:layout_constraintTop_toTopOf="@id/divider4" />

    <TextView
        android:id="@+id/currentForecastPressure"
        style="@style/PrimaryText.Lowest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/title_pressure"
        app:layout_constraintEnd_toEndOf="@+id/divider4"
        app:layout_constraintTop_toTopOf="@id/title_pressure"
        tools:text="998 mm" />

    <TextView
        android:id="@+id/title_pressure"
        style="@style/SecondaryText.Lowest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_margin"
        android:text="@string/current_forecast_pressure"
        app:layout_constraintBottom_toBottomOf="@id/pressure_ico"
        app:layout_constraintStart_toEndOf="@id/pressure_ico"
        app:layout_constraintTop_toTopOf="@id/pressure_ico" />

    <View
        android:id="@+id/divider5"
        style="@style/DividerDefaultStyle"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/small_margin"

        app:layout_constraintEnd_toEndOf="@+id/divider4"
        app:layout_constraintStart_toStartOf="@+id/divider4"
        app:layout_constraintTop_toBottomOf="@id/pressure_ico" />

    <ImageView
        android:id="@+id/humidity_ico"
        android:layout_width="@dimen/icon_small"
        android:layout_height="@dimen/icon_small"
        android:layout_marginTop="@dimen/small_margin"
        android:contentDescription="@string/current_forecast_humidity"
        android:src="@drawable/ic_humidity"
        app:layout_constraintStart_toStartOf="@+id/divider5"
        app:layout_constraintTop_toBottomOf="@id/divider5" />

    <TextView
        android:id="@+id/title_humidity"
        style="@style/SecondaryText.Lowest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_margin"
        android:text="@string/current_forecast_humidity"
        app:layout_constraintBottom_toBottomOf="@id/humidity_ico"
        app:layout_constraintStart_toEndOf="@id/humidity_ico"
        app:layout_constraintTop_toTopOf="@id/humidity_ico" />

    <TextView
        android:id="@+id/currentForecastHumidity"
        style="@style/PrimaryText.Lowest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/title_humidity"
        app:layout_constraintEnd_toEndOf="@+id/divider5"
        app:layout_constraintTop_toTopOf="@id/title_humidity"
        tools:text="90%" />

    <View
        android:id="@+id/divider6"
        style="@style/DividerDefaultStyle"
        android:layout_width="0dp"
        android:layout_height="@dimen/divider_size"
        android:layout_marginHorizontal="@dimen/medium_margin"
        android:layout_marginTop="@dimen/small_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/humidity_ico" />

    <TextView
        android:id="@+id/title_precipitation"
        style="@style/SecondaryText.Lowest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/medium_margin"
        android:layout_marginTop="@dimen/small_margin"
        android:text="@string/current_forecast_precipitation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider6" />

    <TextView
        android:id="@+id/currentForecastPrecipitation3Hours"
        style="@style/PrimaryText.Lowest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/small_margin"
        app:layout_constraintEnd_toEndOf="@+id/title_next_3_hours"
        app:layout_constraintStart_toStartOf="@+id/title_next_3_hours"
        app:layout_constraintTop_toBottomOf="@+id/title_precipitation"
        tools:text="10%" />

    <TextView
        android:id="@+id/title_next_3_hours"
        style="@style/SecondaryText.Lowest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/small_margin"
        android:text="@string/current_forecast_next_3_hours"
        app:layout_constraintEnd_toStartOf="@+id/title_next_6_hours"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/currentForecastPrecipitation3Hours" />

    <View
        android:id="@+id/divider7"
        style="@style/DividerDefaultStyle"
        android:layout_width="@dimen/divider_size"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/title_next_3_hours"
        app:layout_constraintEnd_toStartOf="@+id/title_next_6_hours"
        app:layout_constraintStart_toEndOf="@+id/title_next_3_hours"
        app:layout_constraintTop_toTopOf="@+id/currentForecastPrecipitation3Hours" />

    <TextView
        android:id="@+id/currentForecastPrecipitation6Hours"
        style="@style/PrimaryText.Lowest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/title_next_6_hours"
        app:layout_constraintStart_toStartOf="@+id/title_next_6_hours"
        app:layout_constraintTop_toTopOf="@+id/currentForecastPrecipitation3Hours"
        tools:text="10%" />

    <TextView
        android:id="@+id/title_next_6_hours"
        style="@style/SecondaryText.Lowest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/small_margin"
        android:text="@string/current_forecast_next_6_hours"
        app:layout_constraintEnd_toStartOf="@+id/title_next_12_hours"
        app:layout_constraintStart_toEndOf="@id/title_next_3_hours"
        app:layout_constraintTop_toBottomOf="@id/currentForecastPrecipitation6Hours" />


    <View
        android:id="@+id/divider8"
        style="@style/DividerDefaultStyle"
        android:layout_width="@dimen/divider_size"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/divider7"
        app:layout_constraintEnd_toStartOf="@+id/title_next_12_hours"
        app:layout_constraintStart_toEndOf="@+id/title_next_6_hours"
        app:layout_constraintTop_toTopOf="@id/divider7" />

    <TextView
        android:id="@+id/currentForecastPrecipitation12Hours"
        style="@style/PrimaryText.Lowest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/title_next_12_hours"
        app:layout_constraintStart_toStartOf="@+id/title_next_12_hours"
        app:layout_constraintTop_toTopOf="@+id/currentForecastPrecipitation6Hours"
        tools:text="10%" />

    <TextView
        android:id="@+id/title_next_12_hours"
        style="@style/SecondaryText.Lowest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/small_margin"
        android:text="@string/current_forecast_next_12_hours"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/title_next_6_hours"
        app:layout_constraintTop_toBottomOf="@id/currentForecastPrecipitation12Hours" />

    <View
        android:id="@+id/divider9"
        style="@style/DividerDefaultStyle"
        android:layout_width="0dp"
        android:layout_height="@dimen/divider_size"
        android:layout_marginHorizontal="@dimen/medium_margin"
        android:layout_marginTop="@dimen/small_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider7" />

    <!--    f-->
    <TextView
        android:id="@+id/environment_title"
        style="@style/SecondaryText.Lowest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/medium_margin"
        android:layout_marginTop="@dimen/small_margin"
        android:text="@string/current_forecast_environment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/divider9" />


    <ImageView
        android:id="@+id/ic_visibility"
        android:layout_width="@dimen/icon_small"
        android:layout_height="@dimen/icon_small"
        android:layout_marginTop="@dimen/small_margin"
        android:contentDescription="@string/current_forecast_visibility"
        android:src="@drawable/ic_visibility"
        app:layout_constraintStart_toStartOf="@+id/environment_title"
        app:layout_constraintTop_toBottomOf="@id/environment_title" />

    <TextView
        android:id="@+id/title_visibility"
        style="@style/SecondaryText.Lowest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_margin"
        android:text="@string/current_forecast_visibility"
        app:layout_constraintBottom_toBottomOf="@id/ic_visibility"
        app:layout_constraintStart_toEndOf="@id/ic_visibility"
        app:layout_constraintTop_toTopOf="@id/ic_visibility" />

    <TextView
        android:id="@+id/currentForecastVisibility"
        style="@style/PrimaryText.Lowest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/title_visibility"
        app:layout_constraintEnd_toEndOf="@+id/divider10"
        app:layout_constraintTop_toTopOf="@id/title_visibility"
        tools:text="14 km" />

    <View
        android:id="@+id/divider10"
        style="@style/DividerDefaultStyle"
        android:layout_width="0dp"
        android:layout_height="@dimen/divider_size"
        android:layout_marginHorizontal="@dimen/medium_margin"
        android:layout_marginTop="@dimen/small_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ic_visibility" />

    <ImageView
        android:id="@+id/ic_air_quality"
        android:layout_width="@dimen/icon_small"
        android:layout_height="@dimen/icon_small"
        android:layout_marginTop="@dimen/small_margin"
        android:contentDescription="@string/current_forecast_air_quality"
        android:src="@drawable/ic_pollution"
        app:layout_constraintStart_toStartOf="@id/ic_visibility"
        app:layout_constraintTop_toBottomOf="@id/divider10" />

    <TextView
        android:id="@+id/title_air_quality"
        style="@style/SecondaryText.Lowest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_margin"
        android:text="@string/current_forecast_air_quality"
        app:layout_constraintBottom_toBottomOf="@id/ic_air_quality"
        app:layout_constraintStart_toEndOf="@id/ic_air_quality"
        app:layout_constraintTop_toTopOf="@id/ic_air_quality" />

    <TextView
        android:id="@+id/currentForecastAirQuality"
        style="@style/PrimaryText.Lowest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/title_air_quality"
        app:layout_constraintEnd_toEndOf="@+id/divider10"
        app:layout_constraintTop_toTopOf="@id/title_air_quality"
        tools:text="Хорошее (4)" />

    <View
        android:id="@+id/divider11"
        style="@style/DividerDefaultStyle"
        android:layout_width="0dp"
        android:layout_height="@dimen/divider_size"
        android:layout_marginHorizontal="@dimen/medium_margin"
        android:layout_marginTop="@dimen/small_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ic_air_quality" />

    <ImageView
        android:id="@+id/ic_uv_index"
        android:layout_width="@dimen/icon_small"
        android:layout_height="@dimen/icon_small"
        android:layout_marginTop="@dimen/small_margin"
        android:contentDescription="@string/current_forecast_uv_index"
        android:src="@drawable/ic_uv_index"
        app:layout_constraintStart_toStartOf="@id/ic_air_quality"
        app:layout_constraintTop_toBottomOf="@id/divider11" />

    <TextView
        android:id="@+id/title_uv_index"
        style="@style/SecondaryText.Lowest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_margin"
        android:text="@string/current_forecast_uv_index"
        app:layout_constraintBottom_toBottomOf="@id/ic_uv_index"
        app:layout_constraintStart_toEndOf="@id/ic_uv_index"
        app:layout_constraintTop_toTopOf="@id/ic_uv_index" />

    <TextView
        android:id="@+id/currentForecastUvIndex"
        style="@style/PrimaryText.Lowest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/title_uv_index"
        app:layout_constraintEnd_toEndOf="@+id/divider11"
        app:layout_constraintTop_toTopOf="@id/title_uv_index"
        tools:text="Средний (4)" />

    <View
        android:id="@+id/divider12"
        style="@style/DividerDefaultStyle"
        android:layout_width="0dp"
        android:layout_height="@dimen/divider_size"
        android:layout_marginHorizontal="@dimen/medium_margin"
        android:layout_marginTop="@dimen/small_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ic_uv_index" />

    <ImageView
        android:id="@+id/ic_clouds"
        android:layout_width="@dimen/icon_small"
        android:layout_height="@dimen/icon_small"
        android:layout_marginTop="@dimen/small_margin"
        android:contentDescription="@string/current_forecast_clouds"
        android:src="@drawable/ic_clouds"
        app:layout_constraintStart_toStartOf="@id/ic_uv_index"
        app:layout_constraintTop_toBottomOf="@id/divider12" />

    <TextView
        android:id="@+id/title_clouds"
        style="@style/SecondaryText.Lowest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_margin"
        android:text="@string/current_forecast_clouds"
        app:layout_constraintBottom_toBottomOf="@id/ic_clouds"
        app:layout_constraintStart_toEndOf="@id/ic_clouds"
        app:layout_constraintTop_toTopOf="@id/ic_clouds" />

    <TextView
        android:id="@+id/currentForecastClouds"
        style="@style/PrimaryText.Lowest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/title_clouds"
        app:layout_constraintEnd_toEndOf="@id/divider12"
        app:layout_constraintTop_toTopOf="@id/title_clouds"
        tools:text="40 %" />

</androidx.constraintlayout.widget.ConstraintLayout>