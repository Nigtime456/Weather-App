<com.nigtime.weatherapplication.ui.customviews.CrossFadeAnimatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/currentForecastViewSwitcher"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/themeDayColor"
    app:crossAnimationDuration="@integer/cross_anim_duration"
    app:crossDisplayedChild="0"
    app:crossStartDelay="@integer/cross_start_delay">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.screens.currentforecast.CurrentForecastFragment">

        <androidx.cardview.widget.CardView
            android:id="@+id/currentForecastAppbar"
            style="@style/LiftingToolbarCardStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stateListAnimator="@animator/selector_lift_app_bar"
            app:cardBackgroundColor="?attr/themeDayColor">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/currentForecastToolbar"
                    style="@style/ToolbarMainStyle"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:menu="@menu/current_forecast"
                    app:navigationIcon="@drawable/ic_menu"
                    app:title="Test" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/currentForecastCurrentTemp"
                style="@style/PrimaryText.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="4°" />

            <TextView
                android:id="@+id/currentForecastCurrentDescription"
                style="@style/PrimaryText.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:layout_constraintEnd_toEndOf="@id/currentForecastCurrentTemp"
                app:layout_constraintStart_toStartOf="@id/currentForecastCurrentTemp"
                app:layout_constraintTop_toBottomOf="@id/currentForecastCurrentTemp"
                tools:text="Overcast clouds" />

            <ImageView
                android:id="@+id/currentForecastCurrentIco"
                android:layout_width="@dimen/icon_small"
                android:layout_height="@dimen/icon_small"
                android:layout_marginEnd="@dimen/margin_small"
                app:layout_constraintBottom_toBottomOf="@id/currentForecastCurrentDescription"
                app:layout_constraintEnd_toStartOf="@id/currentForecastCurrentDescription"
                app:layout_constraintTop_toTopOf="@id/currentForecastCurrentDescription"
                tools:src="@drawable/_weather_stub" />

            <TextView
                android:id="@+id/currentForecastCurrentFeelsLikeTemp"
                style="@style/PrimaryText.Lowest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:layout_constraintEnd_toEndOf="@id/currentForecastCurrentDescription"
                app:layout_constraintStart_toStartOf="@id/currentForecastCurrentDescription"
                app:layout_constraintTop_toBottomOf="@id/currentForecastCurrentDescription"
                tools:text="Feels like 35°" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/currentForecastHourlyList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_hour_forecast" />


    </LinearLayout>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Error!"
        android:textColor="@android:color/holo_red_light"
        android:textSize="25sp" />

</com.nigtime.weatherapplication.ui.customviews.CrossFadeAnimatorLayout>

