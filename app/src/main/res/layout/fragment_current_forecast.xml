<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/currentForecastAppBar"
        style="@style/LiftingToolbarCardStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.nigtime.weatherapplication.common.customview.CenteredTitleToolbar
            android:id="@+id/currentForecastToolbar"
            style="@style/ToolbarMainStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:menu="@menu/current_forecast"
            app:navigationIcon="@drawable/ic_menu"
            app:subtitle="10:00"
            tools:title="Moscow" />
    </androidx.cardview.widget.CardView>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/currentForecastSwipeRefresh"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="?attr/themeScreenBackground">


        <com.nigtime.weatherapplication.common.customview.FixedNestedScrollView
            android:id="@+id/currentForecastScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:overScrollMode="never"
            tools:context=".screen.currentforecast.CurrentForecastFragment">

            <com.nigtime.weatherapplication.common.customview.CrossFadeAnimatorLayout
                android:id="@+id/currentForecastViewSwitcher"
                style="@style/CrossFadeDefaultStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:crossDisplayedChild="0">

                <include layout="@layout/fragment_current_forecast_main" />

                <include layout="@layout/fragment_current_forecast_load" />

                <include layout="@layout/fragment_current_forecast_error" />

            </com.nigtime.weatherapplication.common.customview.CrossFadeAnimatorLayout>

        </com.nigtime.weatherapplication.common.customview.FixedNestedScrollView>


    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</LinearLayout>







