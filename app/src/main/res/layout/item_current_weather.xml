<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/spacing_huge"
    android:orientation="vertical">

    <TextView
        android:id="@+id/itemCurrentTemp"
        style="@style/PrimaryText.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="4°" />

    <TextView
        android:id="@+id/itemCurrentDescription"
        style="@style/PrimaryText.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/itemCurrentTemp"
        app:layout_constraintStart_toStartOf="@id/itemCurrentTemp"
        app:layout_constraintTop_toBottomOf="@id/itemCurrentTemp"
        tools:text="Overcast clouds" />

    <ImageView
        android:id="@+id/itemCurrentIco"
        android:layout_width="@dimen/icon_small"
        android:layout_height="@dimen/icon_small"
        android:layout_marginEnd="@dimen/spacing_small"
        android:contentDescription="@string/content_description_weather_ico"
        app:layout_constraintBottom_toBottomOf="@id/itemCurrentDescription"
        app:layout_constraintEnd_toStartOf="@id/itemCurrentDescription"
        app:layout_constraintTop_toTopOf="@id/itemCurrentDescription"
        tools:src="@drawable/ic_weather_drizzle_dn" />

    <TextView
        android:id="@+id/itemCurrentFeelsLikeTemp"
        style="@style/PrimaryText.Lowest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/itemCurrentDescription"
        app:layout_constraintStart_toStartOf="@id/itemCurrentDescription"
        app:layout_constraintTop_toBottomOf="@id/itemCurrentDescription"
        tools:text="Feels like 35°" />

</androidx.constraintlayout.widget.ConstraintLayout>