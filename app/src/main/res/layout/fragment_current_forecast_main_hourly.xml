<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/fragment_current_forecast_main">

    <TextView
        style="@style/SecondaryText.Lowest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/small_margin"
        android:paddingHorizontal="@dimen/medium_margin"
        android:text="@string/current_forecast_hourly_forecast" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/currentForecastHourlyList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_hourly_forecast" />
</merge>