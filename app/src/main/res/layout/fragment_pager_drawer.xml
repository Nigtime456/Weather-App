<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/width_drawer"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="?attr/themeScreenBackground"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/elevation_list_item"

            app:cardBackgroundColor="?attr/themeScreenBackground">

            <TextView
                style="@style/PrimaryText.Medium"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_item_normal"
                android:gravity="center"
                android:paddingHorizontal="@dimen/padding_medium"
                android:text="@string/app_name" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/margin_medium"
            android:elevation="@dimen/elevation_list_item"
            app:cardBackgroundColor="?attr/themeScreenBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pagerCityCount"
                    style="@style/SecondaryText.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/margin_small"
                    android:drawableEnd="@drawable/ic_launch"
                    android:paddingHorizontal="@dimen/padding_medium"
                    tools:text="Городов: 2" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_size"
                    android:background="?attr/themeDividerColor" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/pagerDrawerList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:paddingHorizontal="@dimen/padding_medium"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="5"
                    tools:listitem="@layout/item_drawer_city" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/margin_medium"
            android:elevation="@dimen/elevation_list_item"
            app:cardBackgroundColor="?attr/themeScreenBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/SecondaryText.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/margin_small"
                    android:paddingHorizontal="@dimen/padding_medium"
                    android:text="@string/pager_other" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_size"
                    android:background="?attr/themeDividerColor" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/pagerSettings"
                    style="@style/TextButton.PrimaryLowest"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_item_small"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="@dimen/padding_medium"
                    android:text="@string/pager_settings"
                    app:icon="@drawable/ic_settings" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_size"
                    android:layout_marginHorizontal="@dimen/margin_medium"
                    android:background="?attr/themeDividerColor" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/pagerAboutApp"
                    style="@style/TextButton.PrimaryLowest"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_item_small"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="@dimen/padding_medium"
                    android:text="@string/pager_about_app"
                    app:icon="@drawable/ic_about_app" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>

