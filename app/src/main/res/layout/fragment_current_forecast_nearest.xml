<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/TransparentCardStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_small"
    tools:showIn="@layout/fragment_current_forecast">

    <LinearLayout
        android:id="@+id/fragmentMainForecastNearestLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_small">


        <TextView
            style="@style/PrimaryText.Lowest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Ближайщий прогноз" />

        <View
            style="@style/SecondaryDividerViewStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_size"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_small" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginEnd="@dimen/margin_small"
            android:orientation="horizontal"
            android:weightSum="1.45">

            <TextView
                style="@style/SecondaryText.Lowest"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.6"
                android:gravity="center_vertical"
                android:text="Через 3 часа" />


            <ImageView
                android:id="@+id/fragmentForecastNext3HoursIco"
                android:layout_width="@dimen/icon_small"
                android:layout_height="@dimen/icon_small"
                android:layout_gravity="center"
                tools:src="@drawable/_weather_stub" />

            <TextView
                android:id="@+id/fragmentForecastNext3HoursDescription"
                style="@style/SecondaryText.Lowest"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.6"
                android:gravity="center"
                tools:text="Rain" />

            <TextView
                android:id="@+id/fragmentForecastNext3HoursTemp"
                style="@style/SecondaryText.Lowest"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:gravity="center_vertical|end"
                tools:drawableStart="@drawable/ic_arrow_up"
                tools:text="36°" />

        </LinearLayout>

        <com.nigtime.weatherapplication.ui.customviews.DashedDividerView
            style="@style/DashedDividerStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_size"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginEnd="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_small" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginEnd="@dimen/margin_small"
            android:orientation="horizontal"
            android:weightSum="1.45">

            <TextView
                style="@style/SecondaryText.Lowest"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.6"
                android:gravity="center_vertical"
                android:text="Через 6 часов" />


            <ImageView
                android:id="@+id/fragmentForecastNext6HoursIco"
                android:layout_width="@dimen/icon_small"
                android:layout_height="@dimen/icon_small"
                android:layout_gravity="center"
                tools:src="@drawable/_weather_stub" />

            <TextView
                android:id="@+id/fragmentForecastNext6HoursDescription"
                style="@style/SecondaryText.Lowest"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.6"
                android:gravity="center"
                tools:text="Rain" />

            <TextView
                android:id="@+id/fragmentForecastNext6HoursTemp"
                style="@style/SecondaryText.Lowest"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:gravity="center_vertical|end"
                tools:drawableStart="@drawable/ic_arrow_up"
                tools:text="36°" />

        </LinearLayout>

        <com.nigtime.weatherapplication.ui.customviews.DashedDividerView
            style="@style/DashedDividerStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_size"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginEnd="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_small" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginEnd="@dimen/margin_small"

            android:orientation="horizontal"
            android:weightSum="1.45">


            <TextView
                android:id="@+id/forecastNext12HoursTitle"
                style="@style/SecondaryText.Lowest"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.6"
                android:gravity="center_vertical"
                android:text="Ночью" />


            <ImageView
                android:id="@+id/fragmentForecastNext12HoursIco"
                android:layout_width="@dimen/icon_small"
                android:layout_height="@dimen/icon_small"
                android:layout_gravity="center"
                tools:src="@drawable/_weather_stub" />

            <TextView
                android:id="@+id/fragmentMainForecast12HoursDescription"
                style="@style/SecondaryText.Lowest"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.6"
                android:gravity="center"
                tools:text="Rain" />

            <TextView
                android:id="@+id/fragmentMainForecastNext12HoursTemp"
                style="@style/SecondaryText.Lowest"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:gravity="center_vertical|end"
                tools:drawableStart="@drawable/ic_arrow_up"
                tools:text="36°" />

        </LinearLayout>

        <com.nigtime.weatherapplication.ui.customviews.DashedDividerView
            style="@style/DashedDividerStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_size"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginEnd="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_small" />
    </LinearLayout>
</androidx.cardview.widget.CardView>