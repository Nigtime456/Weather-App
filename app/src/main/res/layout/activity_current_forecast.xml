<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/currentHostDrawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.screen.current_f.pager.CurrentForecastPagerFragment">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/currentHostViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorControlHighlight" />


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/currentHostNavView"
        style="@style/NavigationView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/fragment_location_pages_header"
        app:menu="@menu/location_pages" />
</androidx.drawerlayout.widget.DrawerLayout>