<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/currentActivityDrawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.current.activity.CurrentForecastActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/currentActivityViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/colorControlHighlight" />

        <com.zhpan.indicator.IndicatorView
            android:id="@+id/currentForecastActivityIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/currentActivityNavView"
        style="@style/NavigationView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/include_header"
        app:menu="@menu/current_forecast_nav_view" />

</androidx.drawerlayout.widget.DrawerLayout>