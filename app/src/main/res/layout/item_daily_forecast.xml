<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_ripple_without_background"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/medium_padding"
    tools:background="?attr/themeScreenBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/small_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/itemDayCurrentDate"
            style="@style/PrimaryText.Lowest"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:gravity="center_vertical"
            tools:text="Monday" />

        <ImageView
            android:id="@+id/itemDayIco"
            android:layout_width="@dimen/icon_small"
            android:layout_height="@dimen/icon_small"
            android:layout_gravity="center"
            tools:src="@drawable/_weather_stub"
            android:contentDescription="@string/content_description_weather_ico" />

        <TextView
            android:id="@+id/itemDayDTemp"
            style="@style/PrimaryText.Lowest"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.4"
            android:gravity="center|end"
            tools:text="10°" />

        <TextView
            android:id="@+id/itemDayNTemp"
            style="@style/PrimaryText.Lowest"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.4"
            android:gravity="center|end"
            android:textColor="?attr/themeSecondaryTempColor"
            tools:text="8°" />

    </LinearLayout>

    <View
        style="@style/DividerDefaultStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_size"
        android:layout_marginTop="@dimen/small_margin" />

</LinearLayout>

