<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_daily_forecast_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/spacing_medium"
    android:paddingVertical="@dimen/spacing_small">

    <TextView
        android:id="@+id/item_daily_forecast_time"
        style="@style/PrimaryText.Lowest"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:gravity="center_vertical"
        tools:text="Monday" />

    <ImageView
        android:id="@+id/item_daily_forecast_ico"
        android:layout_width="@dimen/icon_small"
        android:layout_height="@dimen/icon_small"
        android:layout_gravity="center"
        android:contentDescription="@string/content_description_weather"
        tools:src="@drawable/ic_weather_cloudy" />

    <TextView
        android:id="@+id/item_daily_forecast_high_temp"
        style="@style/PrimaryText.Lowest"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="0.4"
        android:gravity="center|end"
        tools:text="10°" />

    <TextView
        android:id="@+id/item_daily_forecast_low_temp"
        style="@style/PrimaryText.Lowest"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="0.4"
        android:gravity="center|end"
        android:textColor="@color/light_blue"
        tools:text="8°" />

</LinearLayout>

